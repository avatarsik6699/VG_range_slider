{
  "env": {
    "shared-node-browser": true,
    "commonjs": true,
    "jquery": true,
    "mocha": true,
    "es2021": true
  },
  "globals": {
    "$": "readonly"
  },
  "extends": [
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended",
    "plugin:fsd/all"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "tsconfigRootDir": ".",
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint", "fsd", "prettier"],
  "rules": {
    "semi": ["warn", "always"],
    "linebreak-style": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}

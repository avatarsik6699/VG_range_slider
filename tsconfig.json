{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom", "esnext"],   
    "sourceMap": true,   
    "strict": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noImplicitAny": false, // for the testin
    "noImplicitThis": false,
    // "alwaysStrict": true, // for the testing
    // "noUnusedLocals": true, // for the testing
    // "noUnusedParameters": true, // for the testing
    "esModuleInterop": true,
  },
  "exclude": ["node_modules", "webpack.config.js"]
}